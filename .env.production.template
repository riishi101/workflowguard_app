# WorkflowGuard Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=4000
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Neon PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://your-username:your-password@your-host.neon.tech:5432/your-database?sslmode=require

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT secret for token signing (generate a strong random string)
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-long

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://www.workflowguard.pro,https://workflowguard.pro

# =============================================================================
# HUBSPOT INTEGRATION
# =============================================================================
# HubSpot OAuth credentials from your HubSpot app
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
HUBSPOT_REDIRECT_URI=https://api.workflowguard.pro/api/auth/hubspot/callback

# HubSpot Marketplace (if applicable)
HUBSPOT_MARKETPLACE_CLIENT_ID=your-marketplace-client-id
HUBSPOT_MARKETPLACE_CLIENT_SECRET=your-marketplace-client-secret

# =============================================================================
# PAYMENT GATEWAY (RAZORPAY)
# =============================================================================
# Razorpay live credentials
RAZORPAY_KEY_ID=rzp_live_your-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret

# Razorpay Plan IDs for different currencies
RAZORPAY_PLAN_ID_USD=plan_your-usd-plan-id
RAZORPAY_PLAN_ID_GBP=plan_your-gbp-plan-id
RAZORPAY_PLAN_ID_EUR=plan_your-eur-plan-id
RAZORPAY_PLAN_ID_CAD=plan_your-cad-plan-id
RAZORPAY_PLAN_ID_INR=plan_your-inr-plan-id

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================
# Twilio for SMS/WhatsApp notifications
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email service (if using SendGrid, Mailgun, etc.)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM_ADDRESS=noreply@workflowguard.pro
EMAIL_FROM_NAME=WorkflowGuard

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry for error monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Logging configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
# Rate limiting settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_MAX_REQUESTS=30

# Security settings
ENABLE_HELMET=true
ENABLE_CORS=true
TRUST_PROXY=true

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
# Redis for caching (if using)
REDIS_URL=redis://your-redis-host:6379
REDIS_PASSWORD=your-redis-password

# Cache TTL settings (in seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# =============================================================================
# BACKUP & STORAGE
# =============================================================================
# Cloud storage for backups
CLOUD_STORAGE_BUCKET=your-backup-bucket
BACKUP_STORAGE_PATH=/tmp/workflowguard-backups

# Backup retention (in days)
BACKUP_RETENTION_DAYS=30

# =============================================================================
# NOTIFICATIONS & WEBHOOKS
# =============================================================================
# Deployment notifications
DEPLOYMENT_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-slack-webhook

# Health check notifications
HEALTH_CHECK_WEBHOOK_URL=https://your-monitoring-service.com/webhook

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_ANALYTICS=true
ENABLE_MARKETPLACE=true
ENABLE_WHATSAPP=true
ENABLE_ADVANCED_FEATURES=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Analytics (if using Google Analytics, Mixpanel, etc.)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Support chat (if using Intercom, Zendesk, etc.)
INTERCOM_APP_ID=your-intercom-app-id
ZENDESK_SUBDOMAIN=your-zendesk-subdomain

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Test database (for running tests in production environment)
TEST_DATABASE_URL=postgresql://test-user:test-pass@test-host:5432/test-db

# API testing
ENABLE_API_DOCS=false
API_DOCS_PASSWORD=your-api-docs-password

# =============================================================================
# GOOGLE CLOUD SPECIFIC
# =============================================================================
# Google Cloud project settings
GOOGLE_CLOUD_PROJECT_ID=continual-mind-473007-h8
GOOGLE_CLOUD_REGION=us-central1

# Cloud Run settings
CLOUD_RUN_MEMORY=1Gi
CLOUD_RUN_CPU=1
CLOUD_RUN_MAX_INSTANCES=10
CLOUD_RUN_CONCURRENCY=80

# =============================================================================
# SSL & DOMAIN CONFIGURATION
# =============================================================================
# Domain settings
FRONTEND_DOMAIN=workflowguard.pro
API_DOMAIN=api.workflowguard.pro
BACKEND_URL=https://api.workflowguard.pro
FRONTEND_URL=https://www.workflowguard.pro

# SSL settings
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# =============================================================================
# MAINTENANCE & OPERATIONS
# =============================================================================
# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=WorkflowGuard is currently under maintenance. Please try again later.

# Feature rollout
BETA_FEATURES_ENABLED=false
BETA_USER_PERCENTAGE=10

# =============================================================================
# COMPLIANCE & PRIVACY
# =============================================================================
# GDPR compliance
ENABLE_GDPR_MODE=true
DATA_RETENTION_DAYS=365

# Privacy settings
ENABLE_ANALYTICS_TRACKING=true
COOKIE_CONSENT_REQUIRED=true

