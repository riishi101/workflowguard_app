{
  "name": "WorkflowGuard",
  "description": "Protect and manage your HubSpot workflows with version control, rollback capabilities, and automated backups. Never lose important workflow changes again.",
  "public": false,
  "auth": {
    "type": "oauth2",
    "scopes": [
      "automation",
      "oauth",
      "workflows-access-public-api"
    ]
  },
  "ui": {
    "cards": [
      {
        "name": "workflow-dashboard",
        "label": "Workflow Protection",
        "url": "https://www.workflowguard.pro/dashboard",
        "description": "View and manage your protected workflows"
      },
      {
        "name": "workflow-history",
        "label": "Version History", 
        "url": "https://www.workflowguard.pro/workflow-history",
        "description": "View workflow version history and rollback changes"
      }
    ]
  },
  "webhooks": [
    {
      "subscriptionType": "automation.workflow.updated",
      "url": "https://www.workflowguard.pro/api/webhooks/hubspot"
    }
  ],
  "settings": {
    "installedAppId": "workflowguard",
    "name": "WorkflowGuard Settings",
    "url": "https://www.workflowguard.pro/settings"
  },
  "functions": {
    "actions": [
      {
        "name": "protect_workflow",
        "label": "Protect Workflow",
        "description": "Start protecting a HubSpot workflow",
        "inputFields": [
          {
            "name": "workflow_id",
            "label": "Workflow ID",
            "type": "string",
            "required": true
          }
        ]
      },
      {
        "name": "rollback_workflow",
        "label": "Rollback Workflow",
        "description": "Rollback workflow to previous version",
        "inputFields": [
          {
            "name": "workflow_id",
            "label": "Workflow ID", 
            "type": "string",
            "required": true
          },
          {
            "name": "version_id",
            "label": "Version ID",
            "type": "string",
            "required": true
          }
        ]
      }
    ]
  },
  "pricing": {
