{
  "name": "backend",
  "version": "0.0.2",
  "description": "WorkflowGuard Backend API",
  "main": "dist/main.js",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "prebuild": "node -e \"if(require('fs').existsSync('dist')) require('fs').rmSync('dist', { recursive: true })\"",
    "build": "tsc -p tsconfig.build.json --outDir dist",
    "postbuild": "node -e \"require('fs').mkdirSync('dist/prisma', { recursive: true }); require('fs').cpSync('prisma/schema.prisma', 'dist/prisma/schema.prisma'); require('fs').cpSync('prisma/migrations', 'dist/prisma/migrations', { recursive: true });\"",
    "prestart:prod": "prisma generate && prisma migrate deploy",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "npm run build && npm run start:prod",
    "start:dev": "ts-node-dev --respawn src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node --max-old-space-size=400 dist/main.js",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.0.0",
    "@prisma/client": "^6.10.1",
    "@sentry/node": "^7.120.4",
    "@sentry/tracing": "^7.120.4",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "lru-cache": "^10.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-oauth2": "^1.8.0",
    "pg": "^8.16.2",
    "prisma": "^6.10.1",
    "prom-client": "^15.1.3",
    "razorpay": "^2.9.4",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "twilio": "^5.8.0",
    "winston": "^3.18.1",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10.0.0",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.0",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/node": "^20.19.10",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
